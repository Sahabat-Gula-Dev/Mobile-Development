<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashscreen_fragment">

    <fragment
        android:id="@+id/splashscreen_fragment"
        android:name="com.pkm.sahabatgula.ui.splashscreen.SplashScreenFragment">
        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/auth_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_input_data"
            app:destination="@id/input_data_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.pkm.sahabatgula.ui.home.HomeFragment" />
    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.pkm.sahabatgula.ui.scan.ScanFragment"/>
    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.pkm.sahabatgula.ui.explore.ExploreFragment"/>
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.pkm.sahabatgula.ui.settings.SettingsFragment"/>



    <!-- Include graph -->
    <include app:graph="@navigation/auth_graph" />
    <include app:graph="@navigation/input_data_graph" />
    <include app:graph="@navigation/home_graph" />
</navigation>