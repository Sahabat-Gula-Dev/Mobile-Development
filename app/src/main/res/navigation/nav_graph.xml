<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashscreen_fragment">

    <fragment
        android:id="@+id/splashscreen_fragment"
        android:name="com.pkm.sahabatgula.ui.splashscreen.SplashScreenFragment">
        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/auth_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_input_data"
            app:destination="@id/input_data_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboarding_fragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_welcome"
            app:destination="@id/welcome_screen_fragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/onboarding_fragment"
        android:name="com.pkm.sahabatgula.onboardingscreen.OnBoardingScreenFragment">
        <action
            android:id="@+id/action_onboarding_to_auth"
            app:destination="@id/auth_graph"/>
        <action
            android:id="@+id/action_onboarding_to_input_data"
            app:destination="@id/input_data_graph"/>
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/home_graph"/>

        <action
            android:id="@+id/action_onboarding_to_register"
            app:destination="@id/register_fragment"
            app:popUpTo="@id/onboarding_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.register.RegisterFragment">
        <action
            android:id="@+id/register_to_otp_verification"
            app:destination="@id/otp_verification_fragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/register_to_login"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/register_to_home"
            app:destination="@id/home_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/register_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/register_to_terms_and_condition"
            app:destination="@id/terms_and_conditions_fragment" />
        <action
            android:id="@+id/register_to_privacy_policy"
            app:destination="@id/privacy_policy_fragment" />
    </fragment>

    <!--    privacy policy -->

    <fragment
        android:id="@+id/privacy_policy_fragment"
        android:name="com.pkm.sahabatgula.ui.settings.appinfo.PrivacyPolicyFragment"/>

    <!--    terms and condition -->
    <fragment
        android:id="@+id/terms_and_conditions_fragment"
        android:name="com.pkm.sahabatgula.ui.settings.appinfo.TermsAndConditionsFragment"/>

    <fragment
        android:id="@+id/welcome_screen_fragment"
        android:name="com.pkm.sahabatgula.welcomescreen.WelcomeScreenFragment">

        <action
            android:id="@+id/action_welcome_screen_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_welcome_screen_to_input_data_graph"
            app:destination="@id/input_data_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.login.LoginFragment">
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register_fragment" />
        <action
            android:id="@+id/action_login_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_login_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_login_to_forgot_password"
            app:destination="@id/input_email_forgot_password_fragment"/>

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register_fragment" />

    </fragment>

    <fragment
        android:id="@+id/otp_verification_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.otpverification.OtpVerificationRegisterFragment">
        <action
            android:id="@+id/otp_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/result_food_scan_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.scanning.result.ResultScanFoodFragment">
        <action
            android:id="@+id/action_result_food_scan_to_detail_food_fragment"
            app:destination="@id/detail_food_fragment">
            <argument
                android:name="foodItem"
                app:argType="com.pkm.sahabatgula.data.remote.model.FoodsItem"
                app:nullable="true"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/food_result_search_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.manualfood.search.FoodResultSearchFragment">
        <action
            android:id="@+id/action_food_result_search_to_detail_food_fragment"
            app:destination="@id/detail_food_fragment">
            <argument
                android:name="foodItemManual"
                app:argType="com.pkm.sahabatgula.data.remote.model.FoodItem"
                app:nullable="true"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/log_manual_food_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.manualfood.LogManualFoodFragment">
        <action
            android:id="@+id/action_log_manual_food_to_detail_food_fragment"
            app:destination="@id/detail_food_fragment">
            <argument
                android:name="foodItemManual"
                app:argType="com.pkm.sahabatgula.data.remote.model.FoodItem"
                app:nullable="true"/>
        </action>
        <action
            android:id="@+id/action_log_manual_food_to_log_manual_custom_food_fragment"
            app:destination="@id/log_manual_custom_food_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/detail_food_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.detailfood.DetailFoodFragment">
        <argument
            android:name="foodItem"
            app:argType="com.pkm.sahabatgula.data.remote.model.FoodsItem"
            app:nullable="true" />
        <argument
            android:name="foodItemManual"
            app:argType="com.pkm.sahabatgula.data.remote.model.FoodItem"
            app:nullable="true" />
    </fragment>


    <fragment
        android:id="@+id/explore_fragment"
        android:name="com.pkm.sahabatgula.ui.explore.ExploreFragment">
        <argument
            android:name="articleItemFromExplore"
            app:argType="com.pkm.sahabatgula.data.remote.model.Article"
            app:nullable="true" />
        <argument
            android:name="eventItemFromExplore"
            app:argType="com.pkm.sahabatgula.data.remote.model.Event"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/detail_article"
        android:name="com.pkm.sahabatgula.ui.explore.article.detailarticle.DetailArticleFragment">
        <argument
            android:name="articleItemFromExplore"
            app:argType="com.pkm.sahabatgula.data.remote.model.Article"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/detail_event"
        android:name="com.pkm.sahabatgula.ui.explore.event.detailevent.DetailEventFragment">
        <argument
            android:name="eventItemFromExplore"
            app:argType="com.pkm.sahabatgula.data.remote.model.Event"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/log_carbo_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailycarbo.CarboFragment">
        <action
            android:id="@+id/action_log_carbo_to_log_food"
            app:destination="@id/log_food_fragment"/>
        <action
            android:id="@+id/action_log_carbo_to_log_history"
            app:destination="@id/log_history_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/log_fat_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfat.FatFragment">
        <action
            android:id="@+id/action_log_fat_to_log_food"
            app:destination="@id/log_food_fragment"/>
        <action
            android:id="@+id/action_log_fat_to_log_history"
            app:destination="@id/log_history_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/log_protein_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyprotein.ProteinFragment">
        <action
            android:id="@+id/action_log_protein_to_log_history"
            app:destination="@id/log_history_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/log_history_fragment"
        android:name="com.pkm.sahabatgula.ui.settings.loghistory.UserHistoryFragment"/>


    <fragment
        android:id="@+id/log_manual_custom_food_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.customfood.LogManualCustomFoodFragment" />
    <include app:graph="@navigation/auth_graph" />
    <include app:graph="@navigation/scan_graph" />
    <include app:graph="@navigation/input_data_graph" />
    <include app:graph="@navigation/home_graph" />
    <include app:graph="@navigation/explore_graph" />
    <include app:graph="@navigation/settings_graph" />


</navigation>