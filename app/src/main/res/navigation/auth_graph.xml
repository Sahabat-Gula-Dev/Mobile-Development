<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/onboarding_screen_fragment"
        android:name="com.pkm.sahabatgula.onboardingscreen.OnBoardingScreenFragment">
        <action
            android:id="@+id/onboarding_to_register"
            app:destination="@id/register_fragment" />
    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.register.RegisterFragment">
        <action
            android:id="@+id/register_to_otp_verification"
            app:destination="@id/otp_verification_fragment"/>
        <action
            android:id="@+id/register_to_login"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/register_to_home"
            app:destination="@id/home_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/register_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/register_to_input_data"
            app:destination="@id/input_data_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/register_to_terms_and_condition"
            app:destination="@id/terms_and_conditions_fragment" />
        <action
            android:id="@+id/register_to_privacy_policy"
            app:destination="@id/privacy_policy_fragment" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.login.LoginFragment">
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register_fragment" />
        <action
            android:id="@+id/action_login_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_login_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_login_to_forgot_password"
            app:destination="@id/input_email_forgot_password_fragment"/>

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register_fragment" />

    </fragment>

    <fragment
        android:id="@+id/input_email_forgot_password_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.forgotpassword.inputemail.ForgotPassEmailInputFragment">
        <action
            android:id="@+id/action_forgot_pass_input_email_to_verify_otp"
            app:destination="@id/verify_otp_forgot_password_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/verify_otp_forgot_password_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.forgotpassword.verifyotp.VerifyResetOtpFragment">
        <action
            android:id="@+id/action_verify_otp_to_reset_password"
            app:destination="@id/reset_password_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/reset_password_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.forgotpassword.newpassword.ResetPasswordFragment">
        <argument
            android:name="resetToken"
            app:argType="string" />
        <action
            android:id="@+id/action_reset_password_to_login"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>
    </fragment>


    <fragment
        android:id="@+id/otp_verification_fragment"
        android:name="com.pkm.sahabatgula.ui.auth.otpverification.OtpVerificationRegisterFragment">
        <action
            android:id="@+id/otp_to_welcome_screen"
            app:destination="@id/welcome_screen_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/welcome_screen_fragment"
        android:name="com.pkm.sahabatgula.welcomescreen.WelcomeScreenFragment">

        <action
            android:id="@+id/action_welcome_screen_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_welcome_screen_to_input_data_graph"
            app:destination="@id/input_data_graph"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true"/>

    </fragment>

</navigation>