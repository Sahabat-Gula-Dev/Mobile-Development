<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scan_graph"
    app:startDestination="@id/log_food_fragment_destination">

    <fragment
        android:id="@+id/log_food_fragment_destination"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.LogFoodFragment"
        android:label="LogFoodFragment">

        <action
            android:id="@+id/action_add_log_food_to_scan_result_fragment"
            app:destination="@id/result_food_scan_fragment">
            <argument
                android:name="uri"
                app:argType="string"/>
        </action>
        <action
            android:id="@+id/action_add_log_food_to_detail_food_fragment"
            app:destination="@id/detail_food_fragment" >
            <argument
                android:name="foodItemManual"
                app:argType="com.pkm.sahabatgula.data.remote.model.FoodItem"
                app:nullable="true"/>
        </action>
        <action
            android:id="@+id/action_add_log_food_to_log_manual_custom_food_fragment"
            app:destination="@id/log_manual_custom_food_fragment"/>
        <action
            android:id="@+id/action_add_log_food_to_result_search_food_fragment"
            app:destination="@id/food_result_search_fragment" />
    </fragment>

    <fragment
        android:id="@+id/detail_food_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.detailfood.DetailFoodFragment">
        <action
            android:id="@+id/action_detail_food_fragment_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/scan_graph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="foodItem"
            app:argType="com.pkm.sahabatgula.data.remote.model.FoodsItem"
            app:nullable="true" />
        <argument
            android:name="foodItemManual"
            app:argType="com.pkm.sahabatgula.data.remote.model.FoodItem"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/log_manual_custom_food_fragment"
        android:name="com.pkm.sahabatgula.ui.home.dailyfood.logfood.customfood.LogManualCustomFoodFragment">
        <action
            android:id="@+id/action_log_custom_food_fragment_to_home_graph"
            app:destination="@id/home_graph"
            app:popUpTo="@id/scan_graph"
            app:popUpToInclusive="true"/>
    </fragment>


</navigation>