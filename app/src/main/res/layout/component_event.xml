<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:strokeWidth="0dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="205dp">

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_shadow_card_article"
            app:layout_constraintStart_toStartOf="@id/img_article"
            app:layout_constraintEnd_toEndOf="@id/img_article"
            app:layout_constraintTop_toTopOf="@id/img_article"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="43dp"
            android:layout_marginHorizontal="24dp"
            android:background="#7A524F4F"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_date_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Agustus 2025"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="2sp"
                android:layout_marginBottom="3dp"
                android:textSize="11sp"
                android:textColor="@color/md_theme_onPrimary"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/ic_calendar"
                app:layout_constraintTop_toTopOf="@id/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@id/ic_calendar"/>

            <TextView
                android:id="@+id/tv_title_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Mengenal Risiko Diabetes Sejak Dini"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6sp"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ic_calendar"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_subtitle_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="2sp"
                android:maxLines="2"
                android:text="Webinar edukatif untuk mengenali tanda-tanda risiko diabetes serta langkah pencegahannya."
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_event" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>