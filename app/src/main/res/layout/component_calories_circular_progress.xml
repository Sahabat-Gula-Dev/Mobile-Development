<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- indicator : proggres yang telah tercapai -->
    <!-- indicator : bakcground circle -->

    <!-- background circle -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:indicatorColor="@color/green_progress_indicator"
        app:trackThickness="16dp"
        app:indicatorSize="150dp"
        android:progress="100"
        app:trackColor="@color/green_progress_indicator"
        />

    <!-- progress circle -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pi_circular_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:indicatorColor="@color/green_track_indicator"
        app:trackColor="@color/green_progress_indicator"
        app:trackThickness="16dp"
        app:trackCornerRadius="100dp"
        app:indicatorSize="150dp"
        android:progress="15"
        android:max="100"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/pi_circular_progress"
        app:layout_constraintTop_toTopOf="@id/pi_circular_progress"
        app:layout_constraintEnd_toEndOf="@id/pi_circular_progress"
        app:layout_constraintBottom_toBottomOf="@id/pi_circular_progress">

        <TextView
            android:id="@+id/tv_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/jakarta_sans_family"
            android:text=""
            android:textColor="@color/green_track_indicator"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kkal tersisa"
            android:textSize="12sp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:fontFamily="@font/plus_jakarta_sans_light"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>