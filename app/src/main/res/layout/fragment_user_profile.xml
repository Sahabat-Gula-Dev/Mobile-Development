<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ui.settings.userprofile.UserProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_title_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profil Pengguna"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Kelola informasi pribadi"
            app:layout_constraintTop_toBottomOf="@id/tv_title_profile"
            app:layout_constraintStart_toStartOf="@id/tv_title_profile"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_info_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_profile">

            <!-- Tinggi badan       -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_height"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_number_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="165"
                    android:textSize="24sp"
                    android:lineSpacingExtra="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_subtitle_height"
                    app:layout_constraintEnd_toEndOf="@id/tv_subtitle_height"/>

                <TextView
                    android:id="@+id/tv_subtitle_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinggi (cm)"
                    android:textSize="12sp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="1sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_number_height"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Berat badan       -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_weight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_height"
                app:layout_constraintEnd_toStartOf="@id/layout_bmi">

                <TextView
                    android:id="@+id/tv_number_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56"
                    android:textSize="24sp"
                    android:lineSpacingExtra="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_subtitle_weight"
                    app:layout_constraintEnd_toEndOf="@id/tv_subtitle_weight"/>

                <TextView
                    android:id="@+id/tv_subtitle_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat (kg)"
                    android:textSize="12sp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="1sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_number_weight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Index BMI       -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bmi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_number_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21,4"
                    android:textSize="24sp"
                    android:lineSpacingExtra="2sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_subtitle_bmi"
                    app:layout_constraintEnd_toEndOf="@id/tv_subtitle_bmi"/>

                <TextView
                    android:id="@+id/tv_subtitle_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indeks BMI"
                    android:textSize="12sp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="1sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_number_bmi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card Indeks Risiko Diabetes       -->
        <include
            android:id="@+id/card_diabetes_risk"
            layout="@layout/component_index_of_diabetes_risk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_info_users"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Card Asesmen Kesehatan Ulang       -->
        <include
            android:id="@+id/card_re_assessment"
            layout="@layout/component_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_diabetes_risk"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
