<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    tools:context=".ui.auth.forgotpassword.inputemail.ForgotPassEmailInputFragment">

    <TextView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Password"
        android:textSize="22sp"
        android:textColor="@color/md_theme_onSurface"
        android:textStyle="bold"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/sub_header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan email yang terdaftar untuk reset password"
        android:textSize="12sp"
        android:lineSpacingExtra="1sp"
        android:letterSpacing="0.03"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_login"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:startIconDrawable="@drawable/ic_mail"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:boxStrokeErrorColor="@color/red_error"
        app:layout_constraintTop_toBottomOf="@id/sub_header_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:importantForAutofill="yes"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout >

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjutkan"
        android:paddingVertical="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>

