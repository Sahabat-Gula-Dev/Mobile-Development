<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.dailyactivity.logactivity.LogActivityFragment">

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari Aktivitas"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:strokeColor="@color/md_theme_onSurfaceVariant"
        app:strokeWidth="1dp"
        app:navigationIcon="@null"
        app:menu="@menu/search_menu"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/md_theme_onPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/layout_chip_group_activity_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_activity_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_activity_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginStart="16dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_activity_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olahan Ayam"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_activity_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sate"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_activity_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bakso"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_activity_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gorengan"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_chip_group_activity_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_card_custom_food"/>

</androidx.constraintlayout.widget.ConstraintLayout>