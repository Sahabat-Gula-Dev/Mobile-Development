<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    android:backgroundTint="@color/md_theme_onPrimary"
    app:strokeWidth="0.5dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="16dp"
    app:strokeColor="#DEDBDBDB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_img_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:src="@drawable/img_food_satay"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/ic_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_img_news"
            app:tint="@color/md_theme_primary" />

        <TextView
            android:id="@+id/tv_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Agustus 2025"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="2sp"
            android:textSize="11sp"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/ic_calendar"
            app:layout_constraintTop_toTopOf="@id/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@id/ic_calendar"/>

        <TextView
            android:id="@+id/tv_title_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Kasus Diabetes di Indonesia Terus Meningkat"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="6sp"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/ic_calendar"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_subtitle_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Indonesia kini menempati peringkat ke-5 dunia dalam jumlah penderita diabetes. Perubahan gaya hidup dan konsumsi gula berlebih menjadi penyebab utama. Pemerintah mendorong masyarakat lebih aktif berolahraga dan mengurangi konsumsi makanan/minuman manis."
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2sp"
            android:textSize="11sp"
            android:textColor="#171D1B"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/tv_title_article"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>