<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:texttools="http://schemas.android.com/tools"
    android:background="@color/md_theme_onPrimary"
    android:padding="16dp">

    <!-- Group Ilustrasi + Title + Message -->
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Ilustrasi -->
        <ImageView
            android:id="@+id/img_glubby"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            texttools:text="Belum Ada Aktivitas"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!-- Message -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            texttools:text="Mulai catat aktivitas harianmu agar Gluby bisa bantu pantau progres kesehatanmu."
            android:textSize="14sp" />

        <include
            android:id="@+id/card_custom_log_food"
            layout="@layout/component_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toBottomOf="@id/protein_consumption"/>
        <include
            android:id="@+id/card_food_suggestion"
            layout="@layout/component_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/protein_consumption"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
