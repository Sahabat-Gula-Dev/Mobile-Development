<?xml version="1.0" encoding="utf-8"?>

<!-- Ketika dipilih, strokewidth akan berubah menjadi surface dan strokecolor akan berubah menejadi primary-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_choice"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:strokeWidth="1dp"
    card_view:strokeColor="@color/md_theme_outline"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ketika diklik, paddingnya akan berubah menjadi 16dp -->
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="28dp"
            android:paddingStart="28dp"
            android:paddingEnd="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/radio_button"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.03"
                android:text="Pilihan Jawaban"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:text="Kondisi ini bisa memengaruhi kadar gula darah dan risiko diabetes."
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Ketika dipilih, checked akan menjadi true-->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_button"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.radiobutton.MaterialRadioButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
