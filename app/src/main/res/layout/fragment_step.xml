<?xml version="1.0" encoding="utf-8"?>

<!-- tambahkan arrow left dan icon share -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:layout_height="wrap_content"
    tools:context=".ui.home.dailystep.StepFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_daily_carbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Langkah Harian"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <include
            android:id="@+id/pi_log_food"
            android:layout_width="221dp"
            android:layout_height="221dp"
            layout="@layout/component_consumption_circular_progress"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_daily_carbo"
            />

        <include
            android:id="@+id/card_daily_carbo_tips"
            layout="@layout/component_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/pi_log_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/card_daily_food_entry"
            layout="@layout/component_activating_step_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_daily_carbo_tips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/card_history_food"
            layout="@layout/component_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_daily_food_entry"/>

        <TextView
            android:id="@+id/title_water_intake_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat Konsumsi Asupan Air"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_history_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- tambahkan grafik asupan air mingguan dan bulanan -->


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Promosi fitur baru dengan integrasi smartwatch"
            android:src="@drawable/img_smartwatch_integration"
            android:clickable="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="157dp"
            app:layout_constraintTop_toBottomOf="@id/title_water_intake_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>