<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="12dp"
    app:cardCornerRadius="2dp"
    app:strokeWidth="0.1dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bg_number_of_risk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="false"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_number_of_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08"
                android:lineSpacingExtra="1dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"/>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_title_index_risk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:letterSpacing="0.02"
            android:text="Risiko Diabetes Sangat Rendah"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg_number_of_risk"
            app:layout_constraintStart_toEndOf="@id/bg_number_of_risk"
            />

        <TextView
            android:id="@+id/subtitle_tv_index_risk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="Kondisi cukup baik, jaga pola makan dan aktivitas harian"
            app:layout_constraintStart_toStartOf="@id/tv_title_index_risk"
            app:layout_constraintTop_toBottomOf="@id/tv_title_index_risk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/bg_number_of_risk"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>