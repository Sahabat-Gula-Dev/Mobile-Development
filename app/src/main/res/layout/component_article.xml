<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="205dp">

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no" android:scaleType="centerCrop"
            android:src="@drawable/img_food_satay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_shadow_card_article"
            app:layout_constraintStart_toStartOf="@id/img_article"
            app:layout_constraintEnd_toEndOf="@id/img_article"
            app:layout_constraintTop_toTopOf="@id/img_article"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_marginBottom="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_title_article"/>

            <TextView
                android:id="@+id/tv_date_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Agustus 2025"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="2sp"
                android:textSize="11sp"
                android:textColor="@color/md_theme_onPrimary"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/ic_calendar"
                app:layout_constraintTop_toTopOf="@id/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@id/ic_calendar"/>

            <TextView
                android:id="@+id/tv_title_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Mengenal Batas Aman Gula Harian"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6sp"
                android:textSize="14sp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/md_theme_onPrimary"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_subtitle_article"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_subtitle_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="2sp"
                android:maxLines="2"
                android:text="Konsumsi gula berlebih bisa memicu obesitas, diabetes tipe 2, hingga penyakit jantung. WHO merekomendasikan konsumsi gula tidak lebih dari 10% dari total energi harian, atau sekitar 50 gram (setara 4 sdm) untuk orang dewasa. Cara mudah menguranginya: kurangi minuman manis, cek label nutrisi, dan pilih buah segar sebagai camilan. Edukasi sejak dini penting agar keluarga terbiasa dengan pola makan sehat rendah gula."
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>