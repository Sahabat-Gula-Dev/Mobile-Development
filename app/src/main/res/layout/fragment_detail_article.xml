<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.explore.article.detailarticle.DetailArticleFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/black"
        app:navigationIconTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp">

            <TextView
                android:id="@+id/tv_title_article"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mengenal Batas Aman Gula Harian"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:lineSpacingExtra="0sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18 Agustus 2025"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_article"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_article_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universitas Mataram"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_primary"
                android:letterSpacing="0.02"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toBottomOf="@id/tv_article_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/img_article"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/tv_article_author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <WebView
                android:id="@+id/tv_article_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/img_article"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="WebViewLayout" />

            <TextView
                android:id="@+id/tv_title_related_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Artikel Kesehatan Lainnya"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/tv_article_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_related_article"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/component_article" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
