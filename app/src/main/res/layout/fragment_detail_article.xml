<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:scrollbars="none"
    tools:context=".ui.explore.article.detailarticle.DetailArticleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mengenal Batas Aman Gula Harian"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:lineSpacingExtra="0sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/tv_article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18 Agustus 2025"
            app:layout_constraintTop_toBottomOf="@id/tv_title_article"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_article_organizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:contentPaddingTop="6dp"
            app:contentPaddingBottom="6dp"
            app:contentPaddingLeft="12dp"
            app:contentPaddingRight="12dp"
            android:elevation="0dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/md_theme_primary"
            app:layout_constraintTop_toBottomOf="@id/tv_article_date"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_article_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universitas Mataram"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onPrimary"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"
                tools:ignore="SmallSp" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            app:layout_constraintTop_toBottomOf="@id/card_article_organizer"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <WebView
            android:id="@+id/tv_article_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/img_article"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="WebViewLayout" />

        <TextView
            android:id="@+id/tv_title_related_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artikel Kesehatan Lainnya"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            android:textSize="16sp"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintTop_toBottomOf="@id/tv_article_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_related_article"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/component_article" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>