<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:scrollbars="none"
    tools:context=".ui.explore.event.detailevent.DetailEventFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mengenal Batas Aman Gula Harian"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:lineSpacingExtra="0sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/tv_article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18 Agustus 2025"
            app:layout_constraintTop_toBottomOf="@id/tv_title_event"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_event_organizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:contentPaddingTop="6dp"
            app:contentPaddingBottom="6dp"
            app:contentPaddingLeft="12dp"
            app:contentPaddingRight="12dp"
            android:elevation="0dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/md_theme_primary"
            app:layout_constraintTop_toBottomOf="@id/tv_article_date"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_event_organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universitas Mataram"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onPrimary"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"
                tools:ignore="SmallSp" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            app:layout_constraintTop_toBottomOf="@id/card_event_organizer"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/img_event"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <include
            android:id="@+id/card_event_date"
            layout="@layout/component_event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_event"/>

        <include
            android:id="@+id/card_event_location"
            layout="@layout/component_event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/card_event_date"/>

        <TextView
            android:id="@+id/tv_event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konsumsi gula tambahan dalam makanan dan minuman sehari-hari telah meningkat secara signifikan dalam beberapa dekade terakhir. Peningkatan ini berkorelasi dengan naiknya prevalensi penyakit tidak menular seperti obesitas, diabetes melitus tipe 2, hipertensi, dan penyakit kardiovaskular. Oleh karena itu, penting bagi masyarakat untuk memahami batas aman konsumsi gula harian sesuai pedoman yang telah ditetapkan oleh otoritas kesehatan dunia."
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_event_location"
            android:justificationMode="inter_word"
            android:letterSpacing="0.02"
            android:textSize="14dp"
            android:lineSpacingExtra="2sp"/>

        <TextView
            android:id="@+id/tv_title_related_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artikel Kesehatan Lainnya"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            android:textSize="16sp"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintTop_toBottomOf="@id/tv_event_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_related_event"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/component_article" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>