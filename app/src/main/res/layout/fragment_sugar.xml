<?xml version="1.0" encoding="utf-8"?>

<!-- tambahkan arrow left dan icon share -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ui.home.dailysugar.SugarFragment">

    <TextView
        android:id="@+id/title_daily_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konsumsi Gula Harian"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onSurface"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <include
        android:id="@+id/pi_daily_sugar"
        android:layout_width="221dp"
        android:layout_height="221dp"
        layout="@layout/component_consumption_circular_progress"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_daily_sugar"
        />

    <include
        android:id="@+id/card_sugar_consumption_level"
        layout="@layout/component_sugar_consumption_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pi_daily_sugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- di sini ganti kontennya dengan konten reminder untuk minum air -->
    <include
        android:id="@+id/card_sugar_action"
        layout="@layout/component_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_sugar_consumption_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title_history_sugar_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Konsumsi Gula"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onSurface"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_sugar_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- tambahkan grafik konsumsi gula mingguan dan bulanan -->

</androidx.constraintlayout.widget.ConstraintLayout>