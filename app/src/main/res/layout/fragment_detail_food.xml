<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/black"
        app:navigationIconTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        android:layout_marginTop="-12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sate Ayam 1 Tusuk 15 gr"
                android:textColor="@color/md_theme_onSurface"
                android:textStyle="bold"
                android:textSize="22sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img_food"
                android:layout_width="0dp"
                android:layout_height="255dp"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:cardCornerRadius="4dp"
                android:elevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_food"
                app:layout_constraintStart_toStartOf="@id/tv_title_food"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_chicken_satay"/>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/ic_food_salad"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_food_salad"
                app:layout_constraintTop_toBottomOf="@id/card_img_food"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="203 kkal"
                android:textColor="#088D08"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/ic_food_salad"
                app:layout_constraintTop_toTopOf="@id/ic_food_salad"
                app:layout_constraintBottom_toBottomOf="@id/ic_food_salad"/>

            <TextView
                android:id="@+id/tv_food_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1sp"
                android:text="Tinggi protein dan lemak, cocok dinikmati sesekali. Penderita kolesterol sebaiknya mengontrol jumlah konsumsinya."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_food_salad" />

            <TextView
                android:id="@+id/tv_food_nutritions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kandungan Gizi"
                android:textStyle="bold"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.92sp"
                android:letterSpacing="0.01"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/md_theme_onSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_food_desc"
                />

            <include
                android:id="@+id/card_food_nutritions"
                layout="@layout/component_nutrinet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_food_nutritions"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                android:id="@+id/card_information"
                layout="@layout/component_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_food_nutritions"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tv_title_topping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topping Atau Tambahan Porsi"
                android:textColor="@color/md_theme_onSurface"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="0.01"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/card_information"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_subtitle_topping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Terkadang kita menambah lontong, kerupuk, atau nasi ekstra yang menambah kalori dan gula"
                android:textSize="12sp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1sp"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_title_topping"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="216dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle_topping"
                app:layout_constraintStart_toStartOf="@id/tv_subtitle_topping"
                tools:listitem="@layout/item_card_custom_food"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/md_theme_onPrimary"
        android:paddingVertical="16dp">

        <Button
            android:id="@+id/btn_log_this_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catat Konsumsi"
            android:letterSpacing="0.01"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingVertical="16dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>