<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ui.auth.register.inputdatauser.consumption.InputDataUserDailyConsumptionFragment">

    <TextView
        android:id="@+id/tv_choose_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Sering Mengonsumsi Buah Dan Sayur?"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tv_subtitle_input_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="2sp"
        android:text="Konsumsi harian buah dan sayur penting untuk menjaga kadar gula darah."
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/tv_choose_consumption"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_consumption"
        tools:ignore="TextContrastCheck" />

    <include
        android:id="@+id/choose_yes_consumption"
        layout="@layout/component_input_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_input_consumption"/>

    <include
        android:id="@+id/choose_no_consumption"
        layout="@layout/component_input_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/choose_yes_consumption"/>

    <Button
        android:id="@+id/btn_continue_to_history_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/lanjutkan"
        android:textStyle="bold"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>