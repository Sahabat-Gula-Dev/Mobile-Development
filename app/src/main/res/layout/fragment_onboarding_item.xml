<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#006B5F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_slide"/>

    <ImageView
        android:id="@+id/img_slide"
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:src="@drawable/onboarding_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:contentDescription="Ilustrasi Fitur" />


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:background="@color/md_theme_onPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_slide">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Cek Asupan Harian"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Cek Asupan Harian" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="Lihat berapa banyak kalori, gula, lemak, karbo, dan protein yang kamu konsumsi tiap hari"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:text="Deskripsi panjang untuk melihat bagaimana teks akan ditampilkan di layar." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>