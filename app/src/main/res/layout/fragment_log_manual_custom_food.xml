<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.dailyfood.logfood.customfood.LogManualCustomFoodFragment">

    <TextView
        android:id="@+id/tv_header_custom_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Racik Makananmu Sendiri"
        android:layout_marginHorizontal="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<!--    <com.google.android.material.search.SearchBar-->
<!--        android:id="@+id/search_bar_food"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Cari Makanan"-->
<!--        android:paddingStart="20dp"-->
<!--        android:paddingEnd="0dp"-->
<!--        app:strokeColor="@color/md_theme_onSurfaceVariant"-->
<!--        app:strokeWidth="1dp"-->
<!--        app:navigationIcon="@null"-->
<!--        app:menu="@menu/search_menu"-->
