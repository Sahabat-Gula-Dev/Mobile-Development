<?xml version="1.0" encoding="utf-8"?>

<!-- tambahkan arrow left dan icon share -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:layout_height="wrap_content"
    tools:context=".ui.home.dailyprotein.ProteinFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title_daily_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asupan Protein Harian"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- circular progress, ganti warna dan logo sesuai dengan protein  -->
        <include
            android:id="@+id/pi_protein"
            android:layout_width="221dp"
            android:layout_height="221dp"
            layout="@layout/component_daily_consumption_circular_progress"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_daily_protein"
            />

        <!-- card tips -->
        <include
            android:id="@+id/card_daily_protein_tips"
            layout="@layout/component_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/pi_protein"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- card information -->
        <include
            android:id="@+id/card_daily_protein_information"
            layout="@layout/component_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_daily_protein_tips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- card history protein -->
        <include
            android:id="@+id/card_history_protein"
            layout="@layout/component_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_daily_protein_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/title_protein_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat Konsumsi Protein Harian"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_history_protein"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- grafik histori protein mingguan dan bulanan -->
        <LinearLayout
            android:id="@+id/layout_protein_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/title_protein_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_history_protein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#2196F3"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorFullWidth="true"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorHeight="3dp"
                app:tabTextColor="@color/black"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_history_protein"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
