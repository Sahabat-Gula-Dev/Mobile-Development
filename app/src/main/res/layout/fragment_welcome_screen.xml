<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.splashscreen.welcomescreen.WelcomeScreenFragment">


    <LinearLayout
        android:id="@+id/layout_text_welcome_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/img_welcome_screen"
            android:layout_width="390dp"
            android:layout_height="390dp"
            android:src="@drawable/img_welcome_screen"
            />

        <TextView
            android:id="@+id/tv_title_welcome_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mari Kenali Kondisimu"
            android:textStyle="bold"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tv_subtitle_welcome_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk memberikan rekomendasi terbaik, kami perlu mengetahui kondisi kesehatanmu"
            android:textAlignment="center"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai"
            android:lineSpacingExtra="4sp"
            android:letterSpacing="0.01"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="18dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>