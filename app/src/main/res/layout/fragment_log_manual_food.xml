<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.dailyfood.logfood.manualfood.LogManualFoodFragment">

    <!-- card suggestion food by manually  -->
    <include
        android:id="@+id/card_suggestion_food_manually_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/component_action"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar_food"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:hint="Cari Makanan"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        android:backgroundTint="@color/md_theme_onPrimary"
        app:layout_constraintTop_toBottomOf="@id/card_suggestion_food_manually_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconDrawable="@drawable/ic_search"
        app:hintEnabled="false"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="Cari Makanan"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>


    <HorizontalScrollView
        android:id="@+id/layout_chip_group_food_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_food_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginStart="16dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olahan Ayam"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sate"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bakso"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gorengan"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_chip_group_food_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_card_food"/>

</androidx.constraintlayout.widget.ConstraintLayout>