<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.dailyfood.logfood.manualfood.LogManualFoodFragment">

    <TextView
        android:id="@+id/tv_title_explore_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event &amp; Aktivitas Terdekat"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/md_theme_onSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_subtitle_explore_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Jangan lewatkan kegiatan seru seputar kesehatan dan edukasi"
        android:lineSpacingExtra="1sp"
        android:letterSpacing="0.03"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_explore_event"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar_food"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Cari Makanan"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:strokeColor="@color/md_theme_onSurfaceVariant"
        app:strokeWidth="1dp"
        app:navigationIcon="@null"
        app:menu="@menu/search_menu"
        android:backgroundTint="@color/md_theme_onPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_explore_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/layout_chip_group_food_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_food_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginStart="16dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cek Kesehatan Gratis"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsultasi Gizi"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampanye &amp; Edukasi"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_food_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gorengan"
                android:lineSpacingExtra="2sp"
                android:letterSpacing="0.05"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:textAppearance="@font/plus_jakarta_sans_light"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:chipCornerRadius="100dp"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_chip_group_food_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/component_event"/>

</androidx.constraintlayout.widget.ConstraintLayout>